<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/groupsScreen">

    <fragment
        android:id="@+id/groupsScreen"
        android:name="packagename.telegramclone.ui.screen.GroupsFragment"
        android:label="GroupsScreen" >
        <action
            android:id="@+id/action_groupsScreen_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="packagename.telegramclone.ui.chat.ChatFragment"
        android:label="ChatFragment" >
        <argument
            android:name="idUser"
            app:argType="string" />
    </fragment>
</navigation>