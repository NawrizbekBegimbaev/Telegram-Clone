<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="6dp"
    android:gravity="start"
    android:orientation="horizontal"
    >
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ic_group"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="6dp"
        android:background="@color/teal_200"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/bg_rect_20_another"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="@id/ic_group"
        app:layout_constraintStart_toEndOf="@id/ic_group"
        app:layout_constraintTop_toTopOf="parent" >


        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:singleLine="true"
            android:textColor="@color/purple_500"
            android:text="username34895" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0f1314"
            android:layout_gravity="bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="ADfkjfkjfaskADfkjfkjfaskADfkjfkjfaskADfkjfkjfaskADfkjfkjfaskADfkjfkjfaskADfkjfkjfask" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textSize="12sp"
            android:layout_gravity="bottom|end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_message"
            tools:text="1:05" />

    </LinearLayout>

</LinearLayout>